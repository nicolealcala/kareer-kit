generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum WorkArrangement {
  ONSITE
  REMOTE
  HYBRID
}

enum ApplicationStatus {
  APPLIED
  VIEWED
  INTERVIEWING
  INTERVIEW_COMPLETED
  OFFER_RECEIVED
  OFFER_ACCEPTED
  OFFER_DECLINED
  REJECTED
  WITHDRAWN
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String?
  settings      Json?
  country       String?
  password_hash String   @map("password_hash")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  applications      Application[]
  schedules         Schedule[]
  employmentHistory EmploymentRecord[]

  @@map("Users")
}

model EmploymentRecord {
  id              String          @id @default(uuid())
  organization    String
  position        String
  workArrangement WorkArrangement @default(ONSITE) @map("work_arrangement")
  salary          String
  startDate       DateTime        @map("start_date")
  endDate         DateTime?       @map("end_date")
  location        String?
  description     String?
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @map("user_id")

  @@map("EmploymentRecords")
}

model Application {
  id              String            @id @default(uuid())
  organization    String
  position        String
  category        String?
  location        String?
  workArrangement WorkArrangement   @default(ONSITE) @map("work_arrangement")
  salaryRange     String?           @map("salary_range")
  status          ApplicationStatus @default(APPLIED)
  jobDescription  String?           @map("job_description")
  notes           String?
  dateApplied     DateTime          @default(now()) @map("date_applied")
  source          Json?
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @map("user_id")

  schedule Schedule[]

  @@map("Applications")
}

model Schedule {
  id          String   @id @default(uuid())
  title       String
  description String?
  scheduledAt DateTime @map("scheduled_at")
  location    Json?
  type        String?
  notes       String?
  isCompleted Boolean  @default(false) @map("is_completed")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @map("user_id")

  application   Application? @relation(fields: [applicationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  applicationId String?      @map("application_id")

  @@map("Schedules")
}
